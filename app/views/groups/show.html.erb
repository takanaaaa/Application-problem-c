<div class="container px-5 px-sm-0">
  <%= render "layouts/errors", obj: @book %>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Group Detail</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th></th>
          </tr>
        </thead>
        <tr>
          <td><%= attachment_image_tag(@group, :image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
          <td><%= @group.name %></td>
          <td><%= @group.introduction %></td>
          <td>
            <% @group.users.each do |user|%>
              <%= user.name%><br>
            <% end %>
          </td>
          <td>
            <% if current_user.id == @group.owner_id %>
              <%= link_to "Edit", edit_group_path(@group), class: "btn btn-success" %>
            <% else %>
              <% if @group.users.include?(current_user) %>
                <%= link_to "Leave this group", group_leave_path(@group), method: :delete, class: "btn btn-primary" %>
              <% else %>
                <%= link_to "Join this group", group_join_path(@group), method: :get, class: "btn btn-success" %>
              <% end %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
